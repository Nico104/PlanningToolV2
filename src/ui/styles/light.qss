}

QCalendarWidget QToolButton:hover {
  background: #eeeeee;
}

QCalendarWidget QMenu {
  background: #ffffff;
  border: 1px solid #e7e7e7;
  border-radius: 10px;
}

QCalendarWidget QAbstractItemView {
  selection-background-color: #111111;
  selection-color: #ffffff;
  background: #ffffff;
  border: none;
