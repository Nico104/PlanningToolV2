}

/* =========================================================
   Tables (Day/Week planner)
   ========================================================= */

QTableWidget {
  background: #ffffff;
  border: 1px solid #e8e8e8;
  border-radius: 8px;
  gridline-color: #f0f0f0;
  outline: 0;
}

QTableWidget::corner-button {
  background: #ffffff;
  border: none;
}

QTableWidget QAbstractButton {
  background: #ffffff;
  border: none;
}

QHeaderView::section {
