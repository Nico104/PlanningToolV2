/* =========================================================
   Header / Control Bar — subtle & compact
   ========================================================= */

QWidget#HeaderBar {
  background: transparent;
  border: none;
  border-radius: 0px;
}

/* unify height + typography */
QWidget#HeaderBar QComboBox,
QWidget#HeaderBar QDateEdit,
QWidget#HeaderBar QLineEdit,
QWidget#HeaderBar QPushButton {
  min-height: 32px;
  font-size: 12px;
}

/* --- Inputs --- */
QLineEdit#HeaderSearch,
QComboBox#HeaderCombo,
QDateEdit#DateEdit {
  background: #ffffff;
  border: 1px solid #e8e8e8;
  border-radius: 6px;
  padding: 6px 10px;
  color: #111111;
}

QLineEdit#HeaderSearch:hover,
QComboBox#HeaderCombo:hover,
QDateEdit#DateEdit:hover {
  background: #ffffff;
  border: 1px solid #d9d9d9;
}

QLineEdit#HeaderSearch:focus,
QComboBox#HeaderCombo:focus,
QDateEdit#DateEdit:focus {
  background: #ffffff;
  border: 1px solid #111111;
  outline: none;
}

/* placeholder */
QLineEdit#HeaderSearch::placeholder {
  color: #9a9a9a;
}

/* --- ComboBox arrow (no divider, no rounding) --- */
QComboBox#HeaderCombo {
  padding-right: 24px;
}

QComboBox#HeaderCombo::drop-down {
  width: 22px;
  border: none;
  background: transparent;
}

QComboBox#HeaderCombo::down-arrow {
  width: 9px;
  height: 9px;
}

/* --- DateEdit arrow --- */
/* --- DateEdit arrow (match HeaderCombo look) --- */
QDateEdit#DateEdit {
  padding-right: 24px;               /* space for the drop-down */
}

/* remove the classic subcontrol divider + make it feel like one field */
QDateEdit#DateEdit::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: top right;

  width: 22px;
  border: none;                      /* <- no vertical divider */
  background: transparent;
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}

/* keep arrow crisp + centered (uses Qt default arrow if you don't provide an image) */
QDateEdit#DateEdit::down-arrow {
  width: 9px;
  height: 9px;
}

/* make hover/focus behave as one single control (no separate button look) */
QDateEdit#DateEdit:hover::drop-down {
  background: transparent;
}

QDateEdit#DateEdit:focus::drop-down {
  background: transparent;
}

/* if spin-buttons ever show up (platform/style dependent), hide them */
QDateEdit#DateEdit::up-button,
QDateEdit#DateEdit::down-button {
  width: 0px;
  height: 0px;
  border: none;
  background: transparent;
}

QDateEdit#DateEdit::down-arrow {
  image: url(":/assets/icons/chevron-down.svg");
  width: 12px;
  height: 12px;
}


/* --- Buttons (very quiet) --- */
QPushButton {
  background: #f8f8f8;
  border: 1px solid #e3e3e3;
  border-radius: 6px;
  padding: 6px 12px;
  color: #111111;
  font-size: 12px;
}

QPushButton:hover {
  background: #f0f0f0;
  border: 1px solid #d9d9d9;
}

QPushButton:pressed {
  background: #e8e8e8;
  border: 1px solid #d0d0d0;
}

/* Nav buttons < > */
QPushButton#NavButton {
  min-width: 32px;
  max-width: 32px;
  min-height: 32px;
  padding: 0px;
  font-weight: 500;
  background: transparent;
  border: 1px solid #e8e8e8;
}

QPushButton#NavButton:hover {
  background: #f5f5f5;
  border: 1px solid #d9d9d9;
}

/* Secondary button (Refresh) */
QPushButton#SecondaryButton {
  background: #f8f8f8;
  border: 1px solid #e3e3e3;
}

QPushButton#SecondaryButton:hover {
  background: #f0f0f0;
  border: 1px solid #d9d9d9;
}

/* Primary button — minimal but clear */
QPushButton#PrimaryButton {
  background: #111111;
  border: none;
  color: #ffffff;
  font-weight: 600;
  padding: 6px 14px;
  border-radius: 6px;
}

QPushButton#PrimaryButton:hover {
  background: #2a2a2a;
}

QPushButton#PrimaryButton:pressed {
  background: #000000;
}



/* =========================================================
   Calendar popup (QDateEdit calendar)
   ========================================================= */

QCalendarWidget QWidget {
  background: #ffffff;
  color: #111111;
}

QCalendarWidget {
  background: #ffffff;
  border: 1px solid #e7e7e7;
  border-radius: 12px;
}

QCalendarWidget QToolButton {
  background: #f5f5f5;
  border: 1px solid #e2e2e2;
